<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="idbd.bigzuoye.FontChooser">

    <HBox spacing="10">
        <Label text="字体:" />
        <ComboBox fx:id="fontFamilyComboBox" prefWidth="200" />
        <Label text="大小:" />
        <ComboBox fx:id="fontSizeComboBox" prefWidth="80" />
    </HBox>

    <TextArea fx:id="previewTextArea" prefHeight="100" promptText="字体预览..." />

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="cancelButton" onAction="#onCancel" text="取消" />
        <Button fx:id="applyButton" onAction="#onApply" text="应用" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
